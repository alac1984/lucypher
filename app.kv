#:import hex kivy.utils.get_color_from_hex

<Root>:
    size: '800dp', '600dp'
    cols: 3
    Menu:
    MainArea:
    DetailsArea:

<Menu@BoxLayout>:
    orientation: 'vertical'
    spacing: "22dp"
    size_hint: .12, 1
    canvas:
        Color:
            rgba: hex('#ee6a59')
        Rectangle:
            size: self.size
            pos: self.pos
    BlankVertical:
        height: "20dp"
    MenuIcon:
        background_normal: 'menu.png'
    BlankVertical:
        height: "30dp"
    MenuIcon:
        background_normal: 'add.png'
        width: "35dp"
        height: "35dp"
    MenuIcon:
        background_normal: 'trash-can.png'
        width: "35dp"
        height: "35dp"
    Widget:

<MainArea@BoxLayout>:
    size_hint: .8, 1
    canvas:
        Color:
            rgba: hex('#ece6cd')
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        orientation: "vertical"
        TitleBar:
        Widget:

<DetailsArea@BoxLayout>:
    canvas:
        Color:
            rgba: hex('#ece6cd')
        Rectangle:
            size: self.size
            pos: self.pos

<MenuIcon@Button>:
    size_hint: None, None
    width: "30dp"
    height: "30dp"
    pos_hint: {'center_x': .5}
    border: 0, 0, 0, 0

<BlankVertical@Widget>:
    size_hint: None, None
    width: self.parent.width

<BlankHorizontal@Widget>:
    size_hint: None, None
    height: self.parent.height

<TitleBar>:
    BoxLayout:
        Label:
            text: "LUCYPHER"
            font_name: "Syncopate"
            bold: True
            font_size: "20dp"
        TextInput:
            id: "search_input"
            multiline: False
            hint_text: "Search"
            on_focus: root.focus()

